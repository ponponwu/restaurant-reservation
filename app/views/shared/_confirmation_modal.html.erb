<!-- 確認對話框 Modal -->
<div id="confirmation-modal" class="fixed inset-0 z-[99999] hidden overflow-y-auto" data-controller="modal">
  <div class="flex items-end justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0">
    <!-- 背景遮罩 -->
    <div class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity" 
         data-action="click->modal#close"
         data-modal-target="overlay"></div>

    <!-- Modal 內容 -->
    <div class="inline-block align-bottom bg-white rounded-lg px-4 pt-5 pb-4 text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-lg sm:w-full sm:p-6"
         data-modal-target="content">
      
      <!-- 訊息顯示區域 -->
      <div id="modal-flash-messages" class="mb-4 hidden">
        <div id="modal-flash-content" class="rounded-md p-4">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg id="modal-flash-icon" class="h-5 w-5" fill="currentColor" viewBox="0 0 20 20">
                <!-- 圖示會被 JavaScript 動態替換 -->
              </svg>
            </div>
            <div class="ml-3">
              <p id="modal-flash-text" class="text-sm font-medium">
                <!-- 訊息文字會被動態替換 -->
              </p>
            </div>
          </div>
        </div>
      </div>
      
      <div class="sm:flex sm:items-start">
        <!-- 圖示區域 -->
        <div class="mx-auto flex-shrink-0 flex items-center justify-center h-12 w-12 rounded-full bg-red-100 sm:mx-0 sm:h-10 sm:w-10"
             data-modal-target="iconContainer">
          <svg class="h-6 w-6 text-red-600" data-modal-target="icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z" />
          </svg>
        </div>
        
        <!-- 文字內容 -->
        <div class="mt-3 text-center sm:mt-0 sm:ml-4 sm:text-left">
          <h3 class="text-lg leading-6 font-medium text-gray-900" data-modal-target="title">
            確認操作
          </h3>
          <div class="mt-2">
            <p class="text-sm text-gray-500" data-modal-target="message">
              您確定要執行此操作嗎？
            </p>
          </div>
        </div>
      </div>
      
      <!-- 按鈕區域 -->
      <div class="mt-5 sm:mt-4 sm:flex sm:flex-row-reverse">
        <button type="button" 
                data-modal-target="confirmBtn"
                data-action="click->modal#confirm"
                class="w-full inline-flex justify-center rounded-md border border-transparent shadow-sm px-4 py-2 bg-red-600 text-base font-medium text-white hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 sm:ml-3 sm:w-auto sm:text-sm">
          確認
        </button>
        <button type="button" 
                data-action="click->modal#close"
                class="mt-3 w-full inline-flex justify-center rounded-md border border-gray-300 shadow-sm px-4 py-2 bg-white text-base font-medium text-gray-700 hover:text-gray-500 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 sm:mt-0 sm:w-auto sm:text-sm">
          取消
        </button>
      </div>
    </div>
  </div>
</div> 