<div class="min-h-screen bg-gray-50 py-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="mb-8">
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-3xl font-bold text-gray-900">管理後台</h1>
          <p class="mt-2 text-gray-600">歡迎使用餐廳訂位系統管理後台</p>
        </div>
        
        <!-- 快速操作按鈕 -->
        <% if current_user&.super_admin? %>
          <div class="flex space-x-3">
            <%= link_to new_admin_user_path,
                class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" do %>
              <svg class="mr-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
              </svg>
              新增管理員
            <% end %>
            
            <%= link_to new_admin_restaurant_path,
                class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500" do %>
              <svg class="mr-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
              </svg>
              新增餐廳
            <% end %>
          </div>
        <% end %>
      </div>
    </div>

    <!-- 管理功能快速連結 -->
    <% if current_user&.super_admin? %>
      <div class="bg-white overflow-hidden shadow rounded-lg mb-8">
        <div class="px-4 py-5 sm:p-6">
          <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">系統管理</h3>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
            <%= link_to admin_users_path,
                class: "group relative rounded-lg p-6 bg-white border border-gray-200 hover:border-blue-500 hover:shadow-md transition-all duration-200" do %>
              <div>
                <span class="rounded-lg inline-flex p-3 bg-blue-50 text-blue-700 ring-4 ring-white">
                  <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"></path>
                  </svg>
                </span>
              </div>
              <div class="mt-8">
                <h3 class="text-lg font-medium text-gray-900 group-hover:text-blue-600">管理員管理</h3>
                <p class="mt-2 text-sm text-gray-500">管理系統內所有管理員帳戶</p>
              </div>
            <% end %>
            
            <%= link_to admin_restaurants_path,
                class: "group relative rounded-lg p-6 bg-white border border-gray-200 hover:border-green-500 hover:shadow-md transition-all duration-200" do %>
              <div>
                <span class="rounded-lg inline-flex p-3 bg-green-50 text-green-700 ring-4 ring-white">
                  <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                  </svg>
                </span>
              </div>
              <div class="mt-8">
                <h3 class="text-lg font-medium text-gray-900 group-hover:text-green-600">餐廳管理</h3>
                <p class="mt-2 text-sm text-gray-500">管理系統內所有餐廳資料</p>
              </div>
            <% end %>
            
            <div class="group relative rounded-lg p-6 bg-white border border-gray-200">
              <div>
                <span class="rounded-lg inline-flex p-3 bg-purple-50 text-purple-700 ring-4 ring-white">
                  <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                  </svg>
                </span>
              </div>
              <div class="mt-8">
                <h3 class="text-lg font-medium text-gray-900">系統報表</h3>
                <p class="mt-2 text-sm text-gray-500">查看系統使用統計報表</p>
                <p class="mt-1 text-xs text-gray-400">即將推出</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <!-- 統計卡片區域 -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
      <!-- 總用戶數 -->
      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-8 h-8 bg-blue-500 rounded-md flex items-center justify-center">
                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"></path>
                </svg>
              </div>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">總用戶數</dt>
                <dd class="text-lg font-medium text-gray-900"><%= @stats[:total_users] %></dd>
              </dl>
            </div>
          </div>
        </div>
      </div>

      <!-- 總餐廳數 -->
      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-8 h-8 bg-green-500 rounded-md flex items-center justify-center">
                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                </svg>
              </div>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">總餐廳數</dt>
                <dd class="text-lg font-medium text-gray-900"><%= @stats[:total_restaurants] %></dd>
              </dl>
            </div>
          </div>
        </div>
      </div>

      <!-- 總桌位數 -->
      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-8 h-8 bg-purple-500 rounded-md flex items-center justify-center">
                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M3 14h18m-9-4v8m-7 0h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
                </svg>
              </div>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">總桌位數</dt>
                <dd class="text-lg font-medium text-gray-900"><%= @stats[:total_tables] %></dd>
              </dl>
            </div>
          </div>
        </div>
      </div>

      <!-- 總訂位數 -->
      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-8 h-8 bg-orange-500 rounded-md flex items-center justify-center">
                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
              </div>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">總訂位數</dt>
                <dd class="text-lg font-medium text-gray-900"><%= @stats[:total_reservations] %></dd>
              </dl>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- 餐廳選擇區域 -->
    <% if @restaurants.any? %>
      <div class="bg-white overflow-hidden shadow rounded-lg mb-8">
        <div class="px-4 py-5 sm:p-6">
          <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">選擇要管理的餐廳</h3>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
            <% @restaurants.each do |restaurant| %>
              <div class="border border-gray-200 rounded-lg p-4 hover:border-blue-500 hover:shadow-md transition-all duration-200">
                <div class="flex items-center justify-between mb-3">
                  <h4 class="text-sm font-medium text-gray-900"><%= restaurant.name %></h4>
                  <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full
                             <%= restaurant.active? ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
                    <%= restaurant.active? ? '營業中' : '暫停' %>
                  </span>
                </div>
                
                <div class="text-xs text-gray-500 mb-3">
                  <p><%= restaurant.address %></p>
                  <p><%= restaurant.phone %></p>
                </div>
                
                <div class="flex flex-wrap gap-4 mt-4">
                  <%= link_to admin_restaurant_reservations_path(restaurant), 
                      class: "inline-flex items-center px-4 py-2 mr-2 mb-3 border border-transparent text-xs font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors" do %>
                    <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                    </svg>
                    訂位管理
                  <% end %>
                  
                  <%= link_to admin_restaurant_tables_path(restaurant), 
                      class: "inline-flex items-center px-4 py-2 mr-2 mb-3 border border-gray-300 text-xs font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors" do %>
                    <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M3 14h18m-9-4v8m-7 0h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
                    </svg>
                    桌位管理
                  <% end %>
                  
                  <%= link_to admin_restaurant_table_groups_path(restaurant), 
                      class: "inline-flex items-center px-4 py-2 mr-2 mb-3 border border-gray-300 text-xs font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors" do %>
                    <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
                    </svg>
                    桌位群組
                  <% end %>
                  
                  <%= link_to admin_restaurant_reservation_periods_path(restaurant), 
                      class: "inline-flex items-center px-4 py-2 mr-2 mb-3 border border-gray-300 text-xs font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors" do %>
                    <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    營業時段
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
      <!-- 用戶角色分布 -->
      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="px-4 py-5 sm:p-6">
          <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">用戶角色分布</h3>
          <div class="space-y-3">
            <div class="flex items-center justify-between">
              <span class="text-sm font-medium text-gray-500">系統管理員</span>
              <span class="text-sm text-gray-900"><%= @stats[:super_admins] %> 人</span>
            </div>
            <div class="flex items-center justify-between">
              <span class="text-sm font-medium text-gray-500">餐廳管理員</span>
              <span class="text-sm text-gray-900"><%= @stats[:managers] %> 人</span>
            </div>
            <div class="flex items-center justify-between">
              <span class="text-sm font-medium text-gray-500">餐廳員工</span>
              <span class="text-sm text-gray-900"><%= @stats[:employees] %> 人</span>
            </div>
          </div>
        </div>
      </div>


      <!-- 最近活動 -->
      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="px-4 py-5 sm:p-6">
          <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">最近活動</h3>
          <% if @recent_activities.any? %>
            <div class="space-y-3">
              <% @recent_activities.each do |activity| %>
                <div class="flex items-start">
                  <div class="flex-shrink-0">
                    <div class="w-6 h-6 bg-<%= activity[:color] %>-100 rounded-full flex items-center justify-center">
                      <div class="w-2 h-2 bg-<%= activity[:color] %>-500 rounded-full"></div>
                    </div>
                  </div>
                  <div class="ml-3 min-w-0 flex-1">
                    <p class="text-sm text-gray-900"><%= activity[:description] %></p>
                    <p class="text-xs text-gray-500"><%= time_ago_in_words(activity[:timestamp]) %>前</p>
                  </div>
                </div>
              <% end %>
            </div>
          <% else %>
            <p class="text-sm text-gray-500">暫無最近活動</p>
          <% end %>
        </div>
      </div>

      <!-- 系統狀態 -->
      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="px-4 py-5 sm:p-6">
          <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">系統狀態</h3>
          <div class="space-y-3">
            <div class="flex items-center justify-between">
              <span class="text-sm font-medium text-gray-500">資料庫</span>
              <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full
                         <%= @system_status[:database] == 'healthy' ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
                <%= @system_status[:database] == 'healthy' ? '正常' : '異常' %>
              </span>
            </div>
            <div class="flex items-center justify-between">
              <span class="text-sm font-medium text-gray-500">用戶健康度</span>
              <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full
                         <%= @system_status[:users_health] == 'healthy' ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800' %>">
                <%= @system_status[:users_health] == 'healthy' ? '良好' : '注意' %>
              </span>
            </div>
            <div class="flex items-center justify-between">
              <span class="text-sm font-medium text-gray-500">餐廳健康度</span>
              <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full
                         <%= @system_status[:restaurants_health] == 'healthy' ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800' %>">
                <%= @system_status[:restaurants_health] == 'healthy' ? '良好' : '注意' %>
              </span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div> 