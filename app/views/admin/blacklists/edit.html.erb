    <div class="flex justify-between items-center mb-6">
      <h1 class="text-2xl font-bold text-gray-900">編輯黑名單</h1>
      <%= link_to "取消", admin_restaurant_blacklists_path(@restaurant),
          class: "text-gray-600 hover:text-gray-900" %>
