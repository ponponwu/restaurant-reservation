<%= turbo_frame_tag "blacklist_form" do %>
  <div class="bg-white rounded-lg border border-gray-200 p-6 max-w-2xl mx-auto">
    <div class="flex justify-between items-center mb-6">
      <h2 class="text-lg font-semibold text-gray-900">編輯黑名單</h2>
      <%= link_to "取消", admin_blacklists_path, 
                  class: "text-sm text-gray-500 hover:text-gray-700",
                  data: { turbo_frame: "_top" } %>
    </div>
    
    <%= render 'form', blacklist: @blacklist %>
  </div>
<% end %>
