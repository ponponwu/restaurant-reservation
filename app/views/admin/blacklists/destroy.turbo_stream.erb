<%= turbo_stream.remove "blacklist_#{@blacklist.id}" %>

<script>
  // 直接在 body 上觸發 flash 顯示
  document.body.insertAdjacentHTML('beforeend', `
    <div class="fixed top-4 right-4 z-50 max-w-sm w-full" id="flash-notice-destroy">
      <div class="bg-white border-l-4 border-green-400 rounded-lg shadow-lg p-4">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-green-400" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
          </div>
          <div class="ml-3">
            <p class="text-sm font-medium text-gray-900">
              黑名單已刪除
            </p>
          </div>
          <div class="ml-auto pl-3">
            <div class="-mx-1.5 -my-1.5">
              <button type="button" class="inline-flex bg-white rounded-md p-1.5 text-gray-400 hover:text-gray-500 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500" onclick="this.closest('#flash-notice-destroy').remove()">
                <span class="sr-only">關閉</span>
                <svg class="h-3 w-3" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
                </svg>
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  `);
  
  // 5秒後自動隱藏
  setTimeout(function() {
    const flashNotice = document.getElementById('flash-notice-destroy');
    if (flashNotice) {
      flashNotice.style.transition = 'opacity 0.5s ease-out';
      flashNotice.style.opacity = '0';
      setTimeout(function() {
        flashNotice.remove();
      }, 500);
    }
  }, 5000);
</script> 