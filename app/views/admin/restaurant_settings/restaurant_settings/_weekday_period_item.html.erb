<div id="reservation_period_<%= period.id %>" 
     class="flex items-center justify-between p-3 bg-gray-50 border border-gray-200 rounded-lg">
  <div class="flex-1">
    <div class="flex items-center space-x-3">
      <h5 class="text-sm font-medium text-gray-900">
        <%= period.name %>
      </h5>
      <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium <%= period.active? ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800' %>">
        <%= period.active? ? '啟用' : '停用' %>
      </span>
    </div>
    
    <div class="mt-1 flex items-center space-x-4 text-xs text-gray-500">
      <div class="flex items-center">
        <svg class="mr-1 h-3 w-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <%= period.start_time.strftime('%H:%M') %> - <%= period.end_time.strftime('%H:%M') %>
      </div>
      
      <div class="flex items-center">
        <svg class="mr-1 h-3 w-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
        </svg>
        間隔 <%= period.reservation_interval_minutes %> 分鐘
      </div>
      
      <div class="flex items-center">
        <svg class="mr-1 h-3 w-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
        </svg>
        <div class="flex flex-wrap gap-1">
          <% period.reservation_slots.active.order(:slot_time).each do |slot| %>
            <span class="inline-block px-2 py-0.5 text-xs bg-gray-100 border border-gray-300 rounded text-gray-700">
              <%= slot.slot_time.strftime('%H:%M') %>
            </span>
          <% end %>
          <% if period.reservation_slots.empty? %>
            <span class="text-xs text-gray-400">無時段</span>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  
  <div class="flex items-center space-x-2">
    <%= link_to "編輯",
        edit_admin_restaurant_reservation_period_path(restaurant, period),
        class: "text-blue-600 hover:text-blue-900 text-xs font-medium",
        data: { action: "click->modal#openRemote", turbo_prefetch: false } %>
    
    <%= link_to toggle_active_admin_restaurant_reservation_period_path(restaurant, period),
        class: "text-xs font-medium #{period.active? ? 'text-red-600 hover:text-red-900' : 'text-green-600 hover:text-green-900'}",
        data: { 
          turbo_method: :patch, 
          turbo_prefetch: false,
          turbo_confirm: "確定要#{period.active? ? '停用' : '啟用'}此營業時段嗎？"
        } do %>
      <%= period.active? ? '停用' : '啟用' %>
    <% end %>
    
    <%= link_to admin_restaurant_reservation_period_path(restaurant, period),
        class: "text-red-600 hover:text-red-900 text-xs font-medium",
        data: { 
          turbo_method: :delete, 
          turbo_prefetch: false,
          turbo_confirm: "確定要刪除此營業時段嗎？"
        } do %>
      刪除
    <% end %>
  </div>
</div>