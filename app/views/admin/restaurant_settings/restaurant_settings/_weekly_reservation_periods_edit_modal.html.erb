<div class="bg-white px-4 pt-5 pb-4 sm:p-6 sm:pb-4">
  <div class="flex items-center justify-between mb-4">
    <h3 class="text-lg leading-6 font-medium text-gray-900" id="weekly-modal-title">
      <%= @chinese_name %>的營業時段設定
    </h3>
    <button type="button"
            class="text-gray-400 hover:text-gray-500"
            title="關閉"
            data-action="click->turbo-modal#close">
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
      </svg>
    </button>
  </div>

  <div class="space-y-6" data-controller="period-editor">
    <!-- 營業模式選擇 -->
    <div>
      <h4 class="text-base font-medium text-gray-900 mb-3">營業模式 <span class="text-red-500">*</span></h4>
      
      <div class="space-y-3">
        <!-- 自訂時段 -->
        <label class="flex items-start space-x-3">
          <input type="radio" 
                 name="operation_mode" 
                 value="custom_hours" 
                 class="mt-1 form-radio h-4 w-4 text-blue-600 border-gray-300 focus:ring-blue-500"
                 data-action="change->period-editor#modeChanged"
                 <%= 'checked' if @current_mode == 'custom_hours' || @current_mode.nil? %> />
          <div class="flex-1">
            <div class="text-sm font-medium text-gray-900">自訂時段</div>
            
            <!-- 自訂時段設定區域 -->
            <div id="custom-periods-section" class="mt-3 space-y-4 <%= 'hidden' unless @current_mode == 'custom_hours' || @current_mode.nil? %>">
              <!-- 時段列表 -->
              <div id="periods-list">
                <% (@periods || []).each_with_index do |period, index| %>
                  <div class="period-item bg-gray-50 p-4 rounded-lg" data-period-index="<%= index %>">
                    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                      <!-- 時間範圍 -->
                      <div class="md:col-span-2">
                        <div class="flex items-center space-x-2">
                          <input type="time" 
                                 name="periods[<%= index %>][start_time]" 
                                 value="<%= period.start_time&.strftime('%H:%M') || '18:00' %>"
                                 class="block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm"
                                 data-action="change->period-editor#timeChanged" />
                          <span class="text-gray-500">至</span>
                          <input type="time" 
                                 name="periods[<%= index %>][end_time]" 
                                 value="<%= period.end_time&.strftime('%H:%M') || '20:00' %>"
                                 class="block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm"
                                 data-action="change->period-editor#timeChanged" />
                        </div>
                      </div>
                      
                      <!-- 預約間隔 -->
                      <div>
                        <select name="periods[<%= index %>][interval]" 
                                class="block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm"
                                data-action="change->period-editor#intervalChanged">
                          <% [15, 30, 60, 90, 120, 150, 180, 210, 240].each do |interval| %>
                            <option value="<%= interval %>" 
                                    <%= 'selected' if (period&.reservation_interval_minutes || 30) == interval %>>
                              <%= interval %> 分鐘
                            </option>
                          <% end %>
                        </select>
                      </div>
                    </div>
                    
                    <!-- 時段預覽 -->
                    <div class="mt-3">
                      <div class="text-sm text-gray-600">
                        訂位時間選項：共 <span class="slot-count">5</span> 個
                      </div>
                      <div class="time-slots-preview mt-1 text-sm text-gray-500">
                        18:00, 18:30, 19:00, 19:30, 20:00
                      </div>
                    </div>
                    
                    <!-- 移除按鈕 -->
                    <% if (@periods || []).length > 1 %>
                      <div class="mt-3 flex justify-end">
                        <button type="button" 
                                class="text-red-600 hover:text-red-800 text-sm"
                                data-action="click->period-editor#removePeriod"
                                data-period-index="<%= index %>">
                          移除此時段
                        </button>
                      </div>
                    <% end %>
                  </div>
                <% end %>
                
                <!-- 預設時段（如果沒有現有時段） -->
                <% if (@periods || []).empty? %>
                  <div class="period-item bg-gray-50 p-4 rounded-lg" data-period-index="0">
                    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                      <div class="md:col-span-2">
                        <div class="flex items-center space-x-2">
                          <input type="time" 
                                 name="periods[0][start_time]" 
                                 value="18:00"
                                 class="block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm"
                                 data-action="change->period-editor#timeChanged" />
                          <span class="text-gray-500">至</span>
                          <input type="time" 
                                 name="periods[0][end_time]" 
                                 value="20:00"
                                 class="block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm"
                                 data-action="change->period-editor#timeChanged" />
                        </div>
                      </div>
                      <div>
                        <select name="periods[0][interval]" 
                                class="block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm"
                                data-action="change->period-editor#intervalChanged">
                          <% [15, 30, 60, 90, 120, 150, 180, 210, 240].each do |interval| %>
                            <option value="<%= interval %>" <%= 'selected' if interval == 30 %>><%= interval %> 分鐘</option>
                          <% end %>
                        </select>
                      </div>
                    </div>
                    <div class="mt-3">
                      <div class="text-sm text-gray-600">
                        訂位時間選項：共 <span class="slot-count">5</span> 個
                      </div>
                      <div class="time-slots-preview mt-1 text-sm text-gray-500">
                        18:00, 18:30, 19:00, 19:30, 20:00
                      </div>
                    </div>
                  </div>
                <% end %>
              </div>
              
              <!-- 新增時段按鈕 -->
              <button type="button" 
                      class="inline-flex items-center px-3 py-2 border border-dashed border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50"
                      data-action="click->period-editor#addPeriod">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                </svg>
                新增時段
              </button>
            </div>
          </div>
        </label>

        <!-- 24小時營業 -->
        <label class="flex items-start space-x-3">
          <input type="radio" 
                 name="operation_mode" 
                 value="twenty_four_hours" 
                 class="mt-1 form-radio h-4 w-4 text-blue-600 border-gray-300 focus:ring-blue-500"
                 data-action="change->period-editor#modeChanged"
                 <%= 'checked' if @current_mode == 'twenty_four_hours' %> />
          <div class="text-sm font-medium text-gray-900">24 小時營業</div>
        </label>

        <!-- 不開放訂位 -->
        <label class="flex items-start space-x-3">
          <input type="radio" 
                 name="operation_mode" 
                 value="closed" 
                 class="mt-1 form-radio h-4 w-4 text-blue-600 border-gray-300 focus:ring-blue-500"
                 data-action="change->period-editor#modeChanged"
                 <%= 'checked' if @current_mode == 'closed' %> />
          <div class="text-sm font-medium text-gray-900">不開放訂位</div>
        </label>
      </div>
    </div>

    <!-- 儲存按鈕 -->
    <div class="flex justify-end space-x-3 pt-4 border-t">
      <button type="button"
              class="inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50"
              data-action="click->turbo-modal#close">
        取消
      </button>
      <button type="button"
              class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700"
              data-action="click->weekly-business-periods#saveWeeklyPeriods"
              data-weekday="<%= @weekday %>">
        儲存
      </button>
    </div>
  </div>
</div>