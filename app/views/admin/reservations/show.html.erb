<!-- 頁面標題和導航 -->
<div class="min-h-screen bg-gray-50">
  <div class="max-w-6xl mx-auto py-4 sm:px-4 lg:px-6">
    <!-- 返回按鈕和標題 -->
    <div class="mb-4">
      <div class="flex items-center justify-between">
        <div class="flex items-center space-x-3">
          <%= link_to admin_restaurant_reservations_path(@restaurant), 
              class: "inline-flex items-center px-3 py-2 border border-gray-300 shadow-sm text-sm leading-4 font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" do %>
            <svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
            </svg>
            返回列表
          <% end %>
          <h1 class="text-xl font-bold text-gray-900">訂位詳情 #<%= @reservation.id %></h1>
        </div>
        
        <!-- 狀態標籤 -->
        <div class="flex items-center space-x-2">
          <% case @reservation.status %>
          <% when 'pending' %>
            <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
              <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
              </svg>
              待確認
            </span>
          <% when 'confirmed' %>
            <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">
              <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
              </svg>
              已確認
            </span>
          <% when 'seated' %>
            <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
              <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"></path>
              </svg>
              已就座
            </span>
          <% when 'completed' %>
            <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
              <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
              </svg>
              已完成
            </span>
          <% when 'cancelled' %>
            <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-medium bg-red-100 text-red-800">
              <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path>
              </svg>
              已取消
            </span>
          <% when 'no_show' %>
            <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-medium bg-red-100 text-red-800">
              <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M13.477 14.89A6 6 0 015.11 6.524l8.367 8.368zm1.414-1.414L6.524 5.11a6 6 0 018.367 8.367zM18 10a8 8 0 11-16 0 8 8 0 0116 0z" clip-rule="evenodd"></path>
              </svg>
              未出席
            </span>
          <% end %>
          
          <%= link_to edit_admin_restaurant_reservation_path(@restaurant, @reservation), 
              class: "inline-flex items-center px-3 py-1.5 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" do %>
            <svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
            </svg>
            編輯
          <% end %>
        </div>
      </div>
    </div>

    <!-- 主要內容 -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-4">
      <!-- 左側：客戶資訊和訂位詳情 -->
      <div class="lg:col-span-2 space-y-4">
        <!-- 客戶資訊 -->
        <div class="bg-white shadow rounded-lg">
          <div class="px-6 py-4 border-b border-gray-200">
            <h3 class="text-lg leading-6 font-medium text-gray-900 flex items-center">
              <svg class="w-5 h-5 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
              </svg>
              客戶資訊
            </h3>
          </div>
          <div class="px-6 py-4">
            <dl class="grid grid-cols-1 gap-4 sm:grid-cols-2">
              <div>
                <dt class="text-sm font-medium text-gray-500">姓名</dt>
                <dd class="mt-1 text-sm text-gray-900 font-medium"><%= @reservation.customer_name %></dd>
              </div>
              <div>
                <dt class="text-sm font-medium text-gray-500">電話</dt>
                <dd class="mt-1 text-sm text-gray-900 flex items-center">
                  <%= @reservation.customer_phone %>
                  <a href="tel:<%= @reservation.customer_phone %>" 
                     class="ml-2 text-blue-600 hover:text-blue-800" title="撥打電話">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                    </svg>
                  </a>
                </dd>
              </div>
              <% if @reservation.customer_email.present? %>
                <div class="sm:col-span-2">
                  <dt class="text-sm font-medium text-gray-500">Email</dt>
                  <dd class="mt-1 text-sm text-gray-900 flex items-center">
                    <%= @reservation.customer_email %>
                    <a href="mailto:<%= @reservation.customer_email %>" 
                       class="ml-2 text-blue-600 hover:text-blue-800" title="發送郵件">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                      </svg>
                    </a>
                  </dd>
                </div>
              <% end %>
            </dl>
          </div>
        </div>

        <!-- 訂位詳情 -->
        <div class="bg-white shadow rounded-lg">
          <div class="px-6 py-4 border-b border-gray-200">
            <h3 class="text-lg leading-6 font-medium text-gray-900 flex items-center">
              <svg class="w-5 h-5 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
              訂位詳情
            </h3>
          </div>
          <div class="px-6 py-4">
            <dl class="grid grid-cols-1 gap-4 sm:grid-cols-2">
              <div>
                <dt class="text-sm font-medium text-gray-500">日期時間</dt>
                <dd class="mt-1 text-sm text-gray-900">
                  <div class="font-medium"><%= @reservation.reservation_datetime.strftime('%Y年%m月%d日') %></div>
                  <div class="text-gray-600"><%= @reservation.reservation_datetime.strftime('%H:%M') %> (<%= @reservation.reservation_datetime.strftime('%A') %>)</div>
                </dd>
              </div>
              <div>
                <dt class="text-sm font-medium text-gray-500">人數</dt>
                <dd class="mt-1 text-sm text-gray-900">
                  <div class="font-medium"><%= @reservation.party_size %> 人</div>
                  <% if @reservation.adults_count.present? && @reservation.children_count.present? %>
                    <div class="text-gray-600 text-xs">
                      成人 <%= @reservation.adults_count %> 人，兒童 <%= @reservation.children_count %> 人
                    </div>
                  <% end %>
                </dd>
              </div>
              <div>
                <dt class="text-sm font-medium text-gray-500">桌位</dt>
                <dd class="mt-1 text-sm text-gray-900">
                  <div class="font-medium">
                    <%= @reservation.table&.table_number || '未分配' %>
                  </div>
                  <% if @reservation.table %>
                    <div class="text-gray-600 text-xs">
                      容量: <%= @reservation.table.capacity %> 人
                    </div>
                  <% end %>
                </dd>
              </div>
              <div>
                <dt class="text-sm font-medium text-gray-500">營業時段</dt>
                <dd class="mt-1 text-sm text-gray-900 font-medium">
                  <%= @reservation.business_period&.name || '未指定' %>
                </dd>
              </div>
            </dl>
          </div>
        </div>

        <!-- 特殊需求和備註 -->
        <% if @reservation.special_requests.present? || @reservation.notes.present? %>
          <div class="bg-white shadow rounded-lg">
            <div class="px-6 py-4 border-b border-gray-200">
              <h3 class="text-lg leading-6 font-medium text-gray-900 flex items-center">
                <svg class="w-5 h-5 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                </svg>
                備註資訊
              </h3>
            </div>
            <div class="px-6 py-4 space-y-4">
              <% if @reservation.special_requests.present? %>
                <div>
                  <dt class="text-sm font-medium text-gray-500 mb-1">特殊需求</dt>
                  <dd class="text-sm text-gray-900 bg-gray-50 rounded-md p-3">
                    <%= @reservation.special_requests %>
                  </dd>
                </div>
              <% end %>
              <% if @reservation.notes.present? %>
                <div>
                  <dt class="text-sm font-medium text-gray-500 mb-1">內部備註</dt>
                  <dd class="text-sm text-gray-900 bg-yellow-50 rounded-md p-3 border-l-4 border-yellow-400">
                    <%= @reservation.notes %>
                  </dd>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>

      <!-- 右側：操作面板和系統資訊 -->
      <div class="space-y-4">
        <!-- 快速操作 -->
        <div class="bg-white shadow rounded-lg">
          <div class="px-6 py-4 border-b border-gray-200">
            <h3 class="text-lg leading-6 font-medium text-gray-900">快速操作</h3>
          </div>
          <div class="px-6 py-4 space-y-3">
            <% if @reservation.status == 'confirmed' %>
              <%= button_to cancel_admin_restaurant_reservation_path(@restaurant, @reservation), 
                  method: :patch,
                  class: "w-full inline-flex justify-center items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500",
                  data: { confirm: "確定要取消這個訂位嗎？" },
                  form_class: "w-full" do %>
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                </svg>
                取消訂位
              <% end %>
            <% end %>

            <% if @reservation.status == 'confirmed' %>
              <%= button_to no_show_admin_restaurant_reservation_path(@restaurant, @reservation), 
                  method: :patch,
                  class: "w-full inline-flex justify-center items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500",
                  data: { confirm: "確定要標記為未出席嗎？" },
                  form_class: "w-full" do %>
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.477 14.89A6 6 0 015.11 6.524l8.367 8.368zm1.414-1.414L6.524 5.11a6 6 0 018.367 8.367zM18 10a8 8 0 11-16 0 8 8 0 0116 0z"></path>
                </svg>
                標記未出席
              <% end %>
            <% end %>

            <!-- 加入黑名單按鈕 -->
            <%= button_to admin_blacklists_path, 
                method: :post,
                local: true,
                params: { 
                  blacklist: { 
                    customer_phone: @reservation.customer_phone, 
                    customer_name: @reservation.customer_name,
                    reason: "從訂位 ##{@reservation.id} 加入"
                  } 
                },
                class: "w-full inline-flex justify-center items-center px-4 py-2 border border-red-300 text-sm font-medium rounded-md text-red-700 bg-red-50 hover:bg-red-100 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500",
                data: { confirm: "確定要將 #{@reservation.customer_name} 加入黑名單嗎？" },
                form_class: "w-full" do %>
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728L5.636 5.636m12.728 12.728L18.364 5.636M5.636 18.364l12.728-12.728"></path>
              </svg>
              加入黑名單
            <% end %>
          </div>
        </div>

        <!-- 系統資訊 -->
        <div class="bg-white shadow rounded-lg">
          <div class="px-6 py-4 border-b border-gray-200">
            <h3 class="text-lg leading-6 font-medium text-gray-900 flex items-center">
              <svg class="w-5 h-5 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              系統資訊
            </h3>
          </div>
          <div class="px-6 py-4">
            <dl class="space-y-3">
              <div>
                <dt class="text-sm font-medium text-gray-500">訂位編號</dt>
                <dd class="mt-1 text-sm text-gray-900 font-mono">#<%= @reservation.id %></dd>
              </div>
              <div>
                <dt class="text-sm font-medium text-gray-500">建立時間</dt>
                <dd class="mt-1 text-sm text-gray-900">
                  <%= @reservation.created_at.strftime('%Y/%m/%d %H:%M') %>
                </dd>
              </div>
              <div>
                <dt class="text-sm font-medium text-gray-500">最後更新</dt>
                <dd class="mt-1 text-sm text-gray-900">
                  <%= @reservation.updated_at.strftime('%Y/%m/%d %H:%M') %>
                </dd>
              </div>
              <% if @reservation.created_at != @reservation.updated_at %>
                <div>
                  <dt class="text-sm font-medium text-gray-500">狀態歷程</dt>
                  <dd class="mt-1 text-sm text-gray-900">
                    <div class="text-xs text-gray-500">
                      最近更新於 <%= time_ago_in_words(@reservation.updated_at) %>前
                    </div>
                  </dd>
                </div>
              <% end %>
            </dl>
          </div>
        </div>

        <!-- 相關連結 -->
        <div class="bg-white shadow rounded-lg">
          <div class="px-6 py-4 border-b border-gray-200">
            <h3 class="text-lg leading-6 font-medium text-gray-900">相關功能</h3>
          </div>
          <div class="px-6 py-4 space-y-2">
            <%= link_to admin_restaurant_reservations_path(@restaurant, date_filter: @reservation.reservation_datetime.to_date), 
                class: "block text-sm text-blue-600 hover:text-blue-800" do %>
              <svg class="w-4 h-4 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
              查看同日其他訂位
            <% end %>
            
            <% if @reservation.table %>
              <%= link_to admin_restaurant_table_path(@restaurant, @reservation.table), 
                  class: "block text-sm text-blue-600 hover:text-blue-800" do %>
                <svg class="w-4 h-4 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                </svg>
                查看桌位詳情
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>


</div> 